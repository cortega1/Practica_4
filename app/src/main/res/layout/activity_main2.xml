<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zenny.form.Main2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="250dp">

        <TextView
            android:text="1.- ¿Qué genero de pelicula te gusta?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:id="@+id/textView12" />

        <RadioButton
            android:text="Drama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="13dp"
            android:id="@+id/radioButton5" />

        <RadioButton
            android:text="Terror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton6"
            android:layout_alignBaseline="@+id/radioButton5"
            android:layout_alignBottom="@+id/radioButton5"
            android:layout_toEndOf="@+id/radioButton5"
            android:layout_marginStart="32dp" />

        <RadioButton
            android:text="Comedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:id="@+id/radioButton7"
            android:layout_alignBaseline="@+id/radioButton6"
            android:layout_alignBottom="@+id/radioButton6"
            android:layout_toEndOf="@+id/radioButton6" />

        <RadioButton
            android:text="Ciencia ficcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton5"
            android:layout_alignStart="@+id/radioButton5"
            android:layout_marginTop="12dp"
            android:id="@+id/radioButton8" />

        <Button
            android:text="Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_alignBaseline="@+id/editText10"
            android:layout_alignBottom="@+id/editText10"
            android:layout_toEndOf="@+id/textView12" />

        <TextView
            android:text="3.- ¿Nombre de tu primer mascota?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_below="@+id/button3"
            android:layout_alignStart="@+id/editText10"
            android:layout_marginTop="12dp" />

        <CheckBox
            android:text="Pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/checkBox"
            android:layout_below="@+id/textView18"
            android:layout_alignStart="@+id/textView18" />

        <CheckBox
            android:text="Mostaza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox"
            android:id="@+id/checkBox2" />

        <CheckBox
            android:text="Mayonesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/checkBox"
            android:layout_alignStart="@+id/radioButton6"
            android:id="@+id/checkBox3" />

        <CheckBox
            android:text="Catsup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox3"
            android:layout_alignStart="@+id/checkBox3"
            android:id="@+id/checkBox4" />

        <CheckBox
            android:text="Tomate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/checkBox3"
            android:layout_alignStart="@+id/button3"
            android:id="@+id/checkBox5" />

        <CheckBox
            android:text="Cebolla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox5"
            android:layout_alignStart="@+id/checkBox5"
            android:id="@+id/checkBox6" />

        <TextView
            android:text="2.- ¿Color favorito?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/textView13"
            android:layout_below="@+id/radioButton8"
            android:layout_alignStart="@+id/radioButton8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText10"
            android:layout_below="@+id/textView13"
            android:layout_alignStart="@+id/textView13" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText11"
            android:layout_below="@+id/textView16"
            android:layout_alignStart="@+id/textView16" />

        <TextView
            android:text="4.- ¿Lugar de nacimiento?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/textView17"
            android:layout_below="@+id/editText11"
            android:layout_alignStart="@+id/editText11" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/textView17"
            android:layout_alignStart="@+id/textView17" />

        <TextView
            android:text="5.- ¿Que ingredientes usas en un sandwich?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/textView18"
            android:layout_below="@+id/spinner"
            android:layout_alignStart="@+id/spinner" />

        <Button
            android:text="Continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox6"
            android:id="@+id/button4"
            android:layout_alignEnd="@+id/button3"
            android:layout_toEndOf="@+id/checkBox3" />

    </RelativeLayout>
</RelativeLayout>
